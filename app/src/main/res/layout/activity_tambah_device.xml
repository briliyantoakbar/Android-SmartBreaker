<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".TambahDevice">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Email"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/EditTxtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/edit_search"
            android:backgroundTint="#F7F7F7"
            android:drawablePadding="12dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Write Your Device"
            android:paddingLeft="12dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Password"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/EditTxtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/edit_search"
            android:backgroundTint="#F7F7F7"
            android:drawablePadding="12dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Write Your Device"
            android:paddingLeft="12dp"
            android:textSize="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="IP"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/EditTxtIP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/edit_search"
            android:backgroundTint="#F7F7F7"
            android:drawablePadding="12dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Write Your Device"
            android:paddingLeft="12dp"
            android:textSize="12dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="SSID"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/EditTxtSSID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/edit_search"
            android:backgroundTint="#F7F7F7"
            android:drawablePadding="12dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Write Your Device"
            android:paddingLeft="12dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Password SSID"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/EditTxtPasswordSSID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/edit_search"
            android:backgroundTint="#F7F7F7"
            android:drawablePadding="12dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Write Your Device"
            android:paddingLeft="12dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Nama Device"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/EditTxtNamaDevice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/edit_search"
            android:backgroundTint="#F7F7F7"
            android:drawablePadding="12dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Write Your Device"
            android:paddingLeft="12dp"
            android:textSize="12dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:text="Save"
        android:id="@+id/btnsimpan"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>